<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintTop_toTopOf="parent" />


    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="@dimen/_5sdp"
        android:outlineAmbientShadowColor="@color/main_color"
        android:outlineSpotShadowColor="@color/main_color"
        app:backgroundColor="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        app:corners="top_left|top_right"
        app:iconTint="#877F7F"
        app:iconTintActive="@color/white"
        app:indicatorColor="@color/main_color"
        app:indicatorRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu"
        app:textColor="@color/white"
        app:textSize="@dimen/_12sdp" />


</androidx.constraintlayout.widget.ConstraintLayout>