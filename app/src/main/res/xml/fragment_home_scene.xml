<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="3000">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/tv1"
                motion:framePosition="95"
                motion:curveFit="spline"
                motion:motionProgress="@integer/material_motion_duration_long_1"
                android:alpha="0.2" />
            <KeyAttribute
                motion:motionTarget="@+id/imageView"
                motion:framePosition="95"
                motion:curveFit="spline"
                motion:motionProgress="@integer/material_motion_duration_short_1"
                android:alpha="0.2" />
            <KeyAttribute
                motion:motionTarget="@+id/category"
                motion:framePosition="95"
                motion:curveFit="spline"
                motion:motionProgress="@integer/material_motion_duration_long_1"
                android:alpha="0.2" />
            <KeyAttribute
                motion:motionTarget="@+id/search"
                motion:framePosition="95"
                motion:curveFit="spline"
                motion:motionProgress="@integer/material_motion_duration_long_1"
                android:alpha="0.2" />
            <KeyAttribute
                motion:motionTarget="@+id/see_all_category"
                motion:framePosition="95"
                motion:curveFit="spline"
                motion:motionProgress="@integer/material_motion_duration_medium_2"
                android:alpha="0.2" />
        </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/viewpager" />
    </Transition>

    <ConstraintSet android:id="@+id/start"></ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/category"
            android:layout_width="-1dp"
            android:layout_height="-1dp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="20dp"
            motion:layout_constraintTop_toBottomOf="@id/search" />
        <Constraint
            android:id="@+id/see_all_category"
            android:layout_width="-1dp"
            android:layout_height="-1dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="20dp"
            motion:layout_constraintTop_toBottomOf="@id/search" />

        <Constraint
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="-1dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            motion:layout_constraintBottom_toBottomOf="@id/tv1"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="@id/tv1" />
        <Constraint
            android:id="@+id/tv1"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="-1dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/search"
            android:layout_width="-1dp"
            android:layout_height="-1dp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/_15sdp"
            motion:layout_constraintTop_toBottomOf="@id/tv1"
            motion:layout_goneMarginLeft="@dimen/_15sdp"
            motion:layout_goneMarginRight="@dimen/_15sdp" />
        <Constraint
            android:id="@+id/tab_layout"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />
    </ConstraintSet>
</MotionScene>